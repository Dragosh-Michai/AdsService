<Page x:Class="AdsService.Pages.CompletedAdsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Завершённые объявления">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Завершённые объявления"
                   Style="{StaticResource HeaderTextStyle}"
                   Margin="20,20,20,10"/>

        <!-- Панель информации -->
        <Border Grid.Row="1" 
                Background="#FF9C1A" 
                Margin="20,0,20,20"
                Padding="15"
                CornerRadius="5">
            <StackPanel>
                <TextBlock x:Name="TotalProfitTextBlock" 
                           Text="Загрузка..."
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="White"/>

                <TextBlock x:Name="AdsCountTextBlock"
                           Text=""
                           FontSize="12"
                           Foreground="White"
                           Margin="0,5,0,0"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">

                    <Button x:Name="BackButton" 
                            Content="← Назад" 
                            Click="BackButton_Click"
                            Background="White"
                            Foreground="#FF9C1A" Height="45"/>

                    <Button x:Name="RefreshButton" 
                            Content="Обновить" 
                            Click="RefreshButton_Click"
                            Background="White"
                            Foreground="#FF9C1A" Height="45"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Список объявлений -->
        <ScrollViewer Grid.Row="2" Margin="20,0,20,20">
            <StackPanel x:Name="AdsContainer">
                <!-- Данные будут добавляться через код -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>